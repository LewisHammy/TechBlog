{{!-- <!-- Loop over each object in the calorieInputs array -->
{{#each calorieInputs as |calorieInput| }}
<div class="row mb-4 calorieInput" data-aos="fade-up">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/calorieInput/{{calorieInput.id}}">{{calorieInput.food_name}}</a>
    </h2>
    <p>
      <!-- Pass needed_funding value to the helper function -->
      <span class="calorie_amount">{{calorieInput.calorie_amount}}</span>
      calories consumed
    </p>
    <p>{{calorieInput.food_name}}</p>
    <p>Created by {{calorieInput.user.name}} on {{format_date calorieInput.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{calorieInput.description}}
    </p>
  </div>
</div>

{{/each}} --}}

<div class="container" data-aos="fade-up">
  <div class="row">
    <div class="col-6 delete-item">
      {{#each calorieInputs as |calorieInput| }}
      <div class="row bg-secondary my-3 text-white">
        <div class=" col-sm-8">
          <h3>{{calorieInput.food_name}}</h3>
          <p>Rating: {{calorieInput.calorie_amount}}</p>
          <p>{{format_date calorieInput.date_created}}</p>
        </div>
        <div class="col-sm-2">
          <button data-id="{{calorieInput.id}}" class="pb-1">Delete</button>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="col-6">
      <h1>THOUGHTS</h1>
      <input type="text" id="food_name" />
      <h1>RATE</h1>
      <input type="text" id="calorie_amount" />
      <button id="calorieSubmit">Submit</button>
    </div>
  </div>
</div>

<script src="js/profile.js"></script>